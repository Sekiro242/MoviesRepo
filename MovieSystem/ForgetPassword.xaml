<Page x:Class="MovieSystem.ForgetPassword"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:MovieSystem"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="ForgetPassword">

    <Grid>
        <Grid.Background>
            <ImageBrush ImageSource="pawel-czerwinski-RXg6VHXYIXQ-unsplash.jpg"></ImageBrush>
        </Grid.Background>
        <Border Background="AntiqueWhite" Margin="200,93,200,63" CornerRadius="5" BorderBrush="White" BorderThickness="2">

        </Border>
        <Label FontFamily="Cooper" FontSize="40" Foreground="Black" Margin="254,93,240,297">Forgot Password</Label>

        <Label Foreground="Black" FontSize="9" Margin="210,204,518,222">New Password:</Label>
        <TextBox x:Name="PasswordB" Margin="214,222,451,212" Background="LightPink"></TextBox>
        <Button Click="Forgot_Pass" Margin="217,342,487,76" Background="LightPink">Forgot Password</Button>

        <Label Foreground="Black" FontSize="9" Margin="210,172,530,254" Content="Email:"/>
        <TextBox x:Name="EmailB" Margin="214,188,451,246" Background="LightPink"/>
    </Grid>
</Page>
