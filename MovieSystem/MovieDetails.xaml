<Page x:Class="MovieSystem.MovieDetails"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:MovieSystem"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="MovieDetails">

    <Grid Background="AliceBlue">
        <Label FontSize="15" Margin="246,78,459,343">MovieName: </Label>
        <Label FontSize="15" Margin="246,141,459,280">Category: </Label>
        <Label FontSize="15" Margin="246,267,459,154">Year: </Label>
        <Label FontSize="15" Margin="246,204,459,217">Producer: </Label>

        <TextBox Height="25" Width="150" Margin="358,80,292,345" Text="{Binding MovieName}"></TextBox>
        <TextBox Height="25" Width="150" Margin="358,208,292,217" Text="{Binding MovieProd}"></TextBox>
        <TextBox Height="25" Width="150" Margin="358,145,292,280" Text="{Binding MovieCat}"></TextBox>
        <TextBox Height="25" Width="150" Margin="358,271,292,154" Text="{Binding MovieYear}"></TextBox>
        
        
    </Grid>
</Page>
